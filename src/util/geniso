#!/bin/bash
#
# Generate a isolinux ISO boot image
#
# geniso foo.iso foo.zlilo
#
# the ISO image is the first argument so that a list of .zlilo images
# to include can be specified
#
# This should be the location of the isolinux.bin file
case $# in
0|1)
	echo Usage: $0 foo.iso foo.zlilo ...
	exit 1
	;;
esac
isolinux_bin=util/isolinux.bin
if [ ! -r $isolinux_bin ]
then
	echo $0: requires $isolinux_bin
	exit 1
fi
out=$1
shift
dir=bin/iso.dir
mkdir -p $dir
cfg=$dir/isolinux.cfg
cp -p $isolinux_bin $dir
cat > $cfg <<EOF
# These default options can be changed in the geniso script
SAY Etherboot ISO boot image generated by geniso
TIMEOUT 3
EOF
first=
for f
do
	if [ ! -r $f ]
	then
		echo $f does not exist, skipping 1>&2
		continue
	fi
	# shorten name for 8.3 filesystem
	b=$(basename $f)
	g=${b%.zlilo}
	g=${g//[^a-z0-9]}
	g=${g:0:8}.zli
	case "$first" in
	"")
		echo DEFAULT $g
		;;
	esac
	first=$g
	echo LABEL $b
	echo "" KERNEL $g
	cp -p $f $dir/$g
done >> $cfg
mkisofs -o $out -c boot.cat -b isolinux.bin -no-emul-boot -boot-load-size 4 -boot-info-table $dir
rm -fr $dir
